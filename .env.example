APP_ENV=development

# Database Configuration
DB_HOST=localhost
DB_USER=your_database_user
DB_PASS=your_database_password
DB_NAME=your_database_name

# JWT Configuration
JWT_SECRET=generate_random_secret_key_here
JWT_ISSUER=yourdomain.com
JWT_AUDIENCE=yourdomain.com

# Email Configuration (SMTP)
MAIL_HOST=mail.yourdomain.com
MAIL_PORT=465
MAIL_USERNAME=support@yourdomain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS=support@yourdomain.com
MAIL_FROM_NAME="Your Bank Name"

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,https://yourdomain.com

# Push Notification (VAPID Keys)
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# Digiflazz Integration (Digital Products)
DIGIFLAZZ_USERNAME=your_username
DIGIFLAZZ_API_KEY=your_api_key
DIGIFLAZZ_PRODUCTION_KEY=your_production_key
DIGIFLAZZ_API_BASE_URL=https://api.digiflazz.com/v1
DIGIFLAZZ_WEBHOOK_SECRET=your_webhook_secret

# Midtrans Payment Gateway
MIDTRANS_SERVER_KEY=your_server_key
MIDTRANS_CLIENT_KEY=your_client_key
MIDTRANS_MERCHANT_ID=your_merchant_id
