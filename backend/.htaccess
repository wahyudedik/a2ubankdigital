# Backend .htaccess
# Allow access to all backend files

# Prevent access to sensitive files
<Files ".env">
    Require all denied
</Files>
<Files ".env.*">
    Require all denied
</Files>
<Files "composer.json">
    Require all denied
</Files>
<Files "composer.lock">
    Require all denied
</Files>

# Prevent directory listing
Options -Indexes

# Allow PHP execution
<FilesMatch "\.php$">
    Require all granted
</FilesMatch>
